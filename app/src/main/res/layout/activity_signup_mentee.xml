<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.khupearl.smp.SmpToolbar
        android:id="@+id/menteesignupToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editTextTextEmailAddress_menteesignup"
        android:layout_width="250dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword_menteesignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menteesignupToolbar" />

    <EditText
        android:id="@+id/editTextTextPassword_menteesignup"
        android:layout_width="310dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/editTextName_menteesignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress_menteesignup" />


    <Button
        android:id="@+id/mentee_id_check_button"
        android:layout_width="60dp"
        android:layout_height="50dp"

        android:background="@drawable/bg_listitem"
        android:text="중복확인"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextEmailAddress_menteesignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextTextEmailAddress_menteesignup"
        app:layout_constraintTop_toTopOf="@+id/editTextTextEmailAddress_menteesignup"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/editTextName_menteesignup"
        android:layout_width="310dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/editTextMajor_menteesignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword_menteesignup" />

    <EditText
        android:id="@+id/editTextMajor_menteesignup"
        android:layout_width="310dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="학과"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/editTextID_menteesignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName_menteesignup" />

    <EditText
        android:id="@+id/editTextID_menteesignup"
        android:layout_width="310dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="학번"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/menteesignup_confirm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMajor_menteesignup" />

    <Button
        android:id="@+id/menteesignup_confirm_button"
        android:layout_width="275dp"
        android:layout_height="47dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_listitem"
        android:text="Signup"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextID_menteesignup" />


</androidx.constraintlayout.widget.ConstraintLayout>